{
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.ts"],
  "testEnvironment": "jsdom",
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testMatch": [
    "**/__tests__/**/*.test.(ts|tsx|js|jsx)"
  ],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts",
    "!src/**/*.stories.{ts,tsx}",
    "!src/app/layout.tsx",
    "!src/app/globals.css"
  ]
}