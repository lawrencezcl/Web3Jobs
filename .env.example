# Web3 Remote Jobs Platform - Environment Configuration
# Copy this file to .env and update the values

# =====================================================
# DATABASE CONFIGURATION
# =====================================================

# For PostgreSQL (Neon/Vercel deployment - recommended)
DATABASE_URL="postgresql://web3user:userpassword@localhost:5432/web3_jobs"

# Alternative: Neon Cloud PostgreSQL
# DATABASE_URL="postgresql://username:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# MySQL Docker Configuration (only for Docker deployment)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=web3_jobs
MYSQL_USER=web3user
MYSQL_PASSWORD=userpassword
MYSQL_PORT=3306

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================

# Node Environment (development, production)
NODE_ENV=production

# Application Port
PORT=3000
APP_PORT=3000

# Public Application URL (update with your domain)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =====================================================
# SECURITY CONFIGURATION
# =====================================================

# Cron/Ingestion Protection Token (generate a strong random string)
CRON_SECRET=your-super-secret-cron-key-change-this
CRAWL_TOKEN=your-super-secret-crawl-token-change-this

# Telegram Channel Posting Tokens
JOB_POSTING_TOKEN=your-job-posting-secret-token
INGESTION_TOKEN=your-ingestion-secret-token
ADMIN_USER_IDS=your-telegram-user-id-1,your-telegram-user-id-2

# =====================================================
# NOTIFICATION SERVICES (OPTIONAL)
# =====================================================

# Telegram Bot Configuration
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_WEBHOOK_SECRET=your-telegram-webhook-secret

# Discord Webhook Configuration
# Create webhook in Discord channel settings
DISCORD_WEBHOOK_URL=

# =====================================================
# EXTERNAL API KEYS (OPTIONAL)
# =====================================================

# Job Board API Keys
LEVER_API_KEY=
GREENHOUSE_API_KEY=

# =====================================================
# DOCKER SPECIFIC (for Docker deployment)
# =====================================================

# phpMyAdmin Port (for database management)
PHPMYADMIN_PORT=8080

# =====================================================
# DEPLOYMENT SPECIFIC
# =====================================================

# For Vercel deployment
# VERCEL_URL will be automatically set by Vercel

# For production, update these:
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
# DATABASE_URL=your-production-database-url